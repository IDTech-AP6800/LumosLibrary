<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LumosLibrary" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.LumosLibrary" parent="Base.Theme.LumosLibrary" />

    <style name="Heading">
        <item name="android:fontFamily">@font/robotoslab_medium</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/lumosWhite</item>
    </style>

    <style name="SubHeading">
        <item name="android:fontFamily">@font/robotoslab_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/lumosWhite</item>
    </style>

    <style name="CardCategory">
        <item name="android:fontFamily">@font/robotoslab_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/primaryBlue</item>
    </style>

    <style name="CardTitle">
        <item name="android:fontFamily">@font/robotoslab_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CardSubTitle">
        <item name="android:fontFamily">@font/robotoslab_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CardTag">
        <item name="android:fontFamily">@font/robotoslab_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>