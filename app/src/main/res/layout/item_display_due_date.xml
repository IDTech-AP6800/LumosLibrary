<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!--You can edit this layout later maybe in the kotlin?-->

    <!--Item visual display -->
    <ImageView
        android:id="@+id/display_image_item"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:src="@drawable/book_advanced_potion_making"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!--Item type-->
    <TextView
        android:id="@+id/display_text_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book"
        android:textSize="12sp"
        android:textColor="@color/primaryBlue"
        android:fontFamily="@font/robotoslab_regular"
        app:layout_constraintTop_toTopOf="@id/display_image_item"
        app:layout_constraintBottom_toTopOf="@id/display_text_name"
        app:layout_constraintStart_toEndOf="@id/display_image_item"/>

    <!--Item name-->
    <TextView
        android:id="@+id/display_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Name"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/robotoslab_bold"
        app:layout_constraintTop_toBottomOf="@id/display_text_type"
        app:layout_constraintBottom_toTopOf="@id/display_text_loan"
        app:layout_constraintStart_toEndOf="@id/display_image_item"/>

    <!--Loan Period-->
    <TextView
        android:id="@+id/display_text_loan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loan Period: "
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/robotoslab_light"
        app:layout_constraintTop_toBottomOf="@id/display_text_name"
        app:layout_constraintBottom_toTopOf="@id/display_text_dueDate"
        app:layout_constraintStart_toEndOf="@id/display_image_item"/>

    <!--Due Date (green or orange)-->
    <TextView
        android:id="@+id/display_text_dueDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Due date: "
        android:textSize="16sp"
        android:textColor="@color/green"
        android:fontFamily="@font/robotoslab_bold"
        app:layout_constraintTop_toBottomOf="@id/display_text_loan"
        app:layout_constraintBottom_toBottomOf="@id/display_image_item"
        app:layout_constraintStart_toEndOf="@id/display_image_item"/>

</androidx.constraintlayout.widget.ConstraintLayout>