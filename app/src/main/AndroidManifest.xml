    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LumosLibrary"
        tools:targetApi="31" >
        <activity
            android:name=".HelpButton"
            android:exported="false" />
        <activity
            android:name=".HelpPageActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".ReturnConfirmationActivity"
            android:exported="false" />
        <activity
            android:name=".ReturnScanItemActivity"
            android:exported="true" />
        <activity
            android:name=".RentConfirmationActivity"
            android:exported="false" />
        <activity
            android:name=".ScanToPayActivity"
            android:exported="false" />
        <activity
            android:name=".TapSwipeInsertPaymentActivity"
            android:exported="false" />
        <activity
            android:name=".RentScanItemActivity"
            android:exported="true" />
        <activity
            android:name=".LoginActivity"
            android:exported="true" />
        <activity
            android:name=".SearchResultsActivity"
            android:exported="true" />
        <activity
            android:name=".LandingPageActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QrCodeActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".PaymentActivity"
            android:exported="true">
        </activity>
    </application>

</manifest>